<Window x:Class="LaserEvBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaserEvBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="337*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="69*"/>
        </Grid.ColumnDefinitions>
        <Label Content ="Zeskanuj Barkod "  HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="238" FontSize="16" Height="31"/>
        <TextBox x:Name="textBox" Margin="5,10,5,12" TextWrapping="Wrap" Text=""  Grid.Row="1" FontSize="14" KeyDown="textBox_KeyDown"/>
        <Label x:Name="labelStatusInfo" Content="Zeskanuj produkt!!" HorizontalContentAlignment="Center" Margin="10,10,10,12" FontSize="20" Background="#FF0CA0ED" Grid.RowSpan="2" Grid.Column="1" />

    </Grid>
</Window>
